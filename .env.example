# ==============================================================================
# TODO Application - Environment Variables Template
# ==============================================================================
#
# This is a template file with placeholder values.
# Copy this file to .env and replace placeholders with actual values.
#
# IMPORTANT: Never commit .env files with real credentials!
#
# Usage:
#   cp .env.example .env
#   # Edit .env with your actual values
#
# ==============================================================================

# ------------------------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=todoapp
DB_USER=todoapp
DB_PASSWORD=CHANGE_ME_IN_PRODUCTION

# ------------------------------------------------------------------------------
# Redis Configuration
# ------------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ------------------------------------------------------------------------------
# RabbitMQ Configuration
# ------------------------------------------------------------------------------
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=todoapp
RABBITMQ_PASSWORD=CHANGE_ME_IN_PRODUCTION
RABBITMQ_VHOST=/

# ------------------------------------------------------------------------------
# MinIO Configuration (S3-compatible object storage)
# ------------------------------------------------------------------------------
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=todoapp
MINIO_SECRET_KEY=CHANGE_ME_IN_PRODUCTION
MINIO_BUCKET=todoapp-files
MINIO_REGION=us-east-1

# ------------------------------------------------------------------------------
# JWT Configuration
# ------------------------------------------------------------------------------
JWT_SECRET=CHANGE_ME_TO_RANDOM_256_BIT_STRING_IN_PRODUCTION
JWT_EXPIRATION_MS=86400000

# ------------------------------------------------------------------------------
# Email/SMTP Configuration (for notifications)
# ------------------------------------------------------------------------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=CHANGE_ME_IN_PRODUCTION
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=TODO App

# ------------------------------------------------------------------------------
# Application Configuration
# ------------------------------------------------------------------------------
APP_ENV=development
APP_PORT=8080
APP_FRONTEND_URL=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000

# ------------------------------------------------------------------------------
# Feature Flags
# ------------------------------------------------------------------------------
FEATURE_FILE_UPLOAD_ENABLED=true
FEATURE_NOTIFICATIONS_ENABLED=true
FEATURE_TIME_TRACKING_ENABLED=true

# ------------------------------------------------------------------------------
# Security Configuration
# ------------------------------------------------------------------------------
# Password requirements
MIN_PASSWORD_LENGTH=8
REQUIRE_PASSWORD_UPPERCASE=true
REQUIRE_PASSWORD_LOWERCASE=true
REQUIRE_PASSWORD_NUMBERS=true
REQUIRE_PASSWORD_SPECIAL_CHARS=false

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ------------------------------------------------------------------------------
# File Upload Configuration
# ------------------------------------------------------------------------------
MAX_FILE_SIZE_MB=25
MAX_USER_STORAGE_GB=1
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,gif,doc,docx,xls,xlsx,txt

# ------------------------------------------------------------------------------
# Logging Configuration
# ------------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FORMAT=json

# ------------------------------------------------------------------------------
# Monitoring Configuration
# ------------------------------------------------------------------------------
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
